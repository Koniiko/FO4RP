//format: "[pid:count], [pid:count]"
string enlist( Item@[] list )
{
	if( !valid( list ) )
	{
		return "[null]";
	}
	
	uint len = list.length();
	if( len == 0 )
	{
		return "[empty]";
	}
	
	string result = itemInfo( list[0] );
	for( uint i = 1; i < len; i++ )
	{
		result += ", " + itemInfo( list[i] );
	}
	return result;
}

