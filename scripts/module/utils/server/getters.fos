bool HasBlade( Critter& cr )
{
	Item@[] blades; 
	cr.GetItemsByType( ITEM_TYPE_WEAPON, blades );
	if( blades.length > 0 )
	{
		for( uint i = 0; i < blades.length(); i++ )
		{
			Item@ bladeItem = blades[i];
			if( isBlade( bladeItem ) )
			{
				return true;
			}
		}
	}
	return false;
}