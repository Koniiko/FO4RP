Item@[] getItemsAround( Map& map, uint16 x, uint16 y, uint8 range )
{
	if( range == 0 )
	{
		range == 1;
	}
	Item@[] result;
	
	for( uint i = 0; i < range; i++ )
	{
		uint16 tx = x, ty = y;
		map.MoveHexByDir( tx, ty, i, 1 );
		map.GetItems( tx, ty, result );
	}
	map.GetItems( x, y, result );
	
	return result;
}

